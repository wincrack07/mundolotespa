<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_alphabot" model="ir.ui.view">
			<field name="name">res.config.settings.view.alphabot</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="account.res_config_settings_view_form"/>
			<field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="alphabot_fel_cpbs_control">
                        <div class="o_setting_left_pane">
                            <field name="alphabot_fel_cpbs_control"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="alphabot_fel_cpbs_control"/>
                            <div class="text-muted">
                                Habilitar CPBS para los productos usados en la factura electrónica
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="alphabot_fel_round_desc">
                        <div class="o_setting_left_pane">
                            <field name="alphabot_fel_round_desc"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="alphabot_fel_round_desc"/>
                            <div class="text-muted">
                                Redondear cálculo de descuentos antes de enviar al PAC
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="alphabot_fel_auto_after_post">
                        <div class="o_setting_left_pane">
                            <field name="alphabot_fel_auto_after_post"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="alphabot_fel_auto_after_post"/>
                            <div class="text-muted">
                                Emitir factura electrónica al publicar factura
                            </div>
                        </div>
                    </div>
                </xpath>
			</field>
		</record>
    </data>
</odoo>
